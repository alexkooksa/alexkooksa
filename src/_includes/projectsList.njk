<section class="cases-section dark-bg" id="work" data-gsap="section-overlap">
    <div class="wrap">
        <div class="title-group centered">
            <h2><span class="gradient-text" data-gsap="opacity">Недавние кейсы</span></h2>
            <p data-gsap="opacity">Проекты запущены, поддерживаются и развиваются</p>
        </div>
        <ul class="caselist">
            {% for project in collections.latest %}
            <li data-gsap="scale">
                <a href="{{ project.url }}" class="caselist__item is-large">
                    <div class="item-content">
                        <p class="item-title title-font">{{ project.data.title }}</p>

                        <p class="item-desc">{{ project.data.short_desc }}{% if project.data.short_desc_add | length %} {{ project.data.short_desc_add }}{% endif %}</p>

                        {% if project.data.role | length %}
                        <ul class="taglist">
                            {% for item in project.data.role %}
                            <li class="taglist__item">{{item}}</li>
                            {% endfor %}
                        </ul>
                        {% endif %}

                        {% if project.data.year | length %}
                        <p class="item-date"><span>{{ project.data.year }}</span></p>
                        {% endif %}
                        <p class="btn btn-white">Смотреть кейс</p>
                    </div>
                    <div class="item-image">
                        {% image ["src/content/", project.data.folder, "/case-preview.png"] | join, "", "Превью кейса",  [690, 1380]  %}

                    </div>
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>

<section class="older-section dark-bg overlapped">
    <div class="wrap">
        <div class="centered title-group">
            <h2><span class="gradient-text" data-gsap="opacity">Сайты постарше</span></h2>
            <p data-gsap="opacity">Кроме Bright Rich были и другие проекты, например:</p>
        </div>
        <ul class="caselist caselist--small">
            {% for project in collections.older | reverse  %}
            <li data-gsap="groupTranslateY">
                <a class="caselist__item is-vertical" href="{{ project.url }}">
                    <div class="item-content">
                        <p class="item-title title-font">{% if project.data.short_title | length %}{{ project.data.short_title }}{% else %}{{ project.data.title }}{% endif %}</p>
                        <p class="item-desc">{{ project.data.short_desc }}</p>
                        {% if project.data.role | length %}
                        <ul class="taglist">
                            {% for item in project.data.role %}
                            <li class="taglist__item">{{item}}</li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                        <div class="item-content__bottom rows">
                            {% if project.data.year | length %}
                            <p class="item-date"><span>{{ project.data.year }}</span></p>
                            {% endif %}
                            <p class="btn btn-white">Смотреть кейс</p>
                        </div>
                    </div>
                </a>
            </li>
            {% endfor %}

            <li class="caselist__item is-vertical caselist__item--last" data-gsap="groupTranslateY">
                <div class="item-content">
                    <p class="item-title title-font"><span class="gradient-text">И ещё</span></p>
                    <p class="stats-block"><span class="stats-number">100+</span><span class="stats-unit">проектов <br />за 7 лет</span></p>
                    <p class="item-desc">E-commerce, недвижимость, внутренние CRM, корпоративные сайты</p>
                    <div class="item-content__bottom rows">
                        <p class="item-date"><span>2016 - 2023</span></p>
                        <a href="/#experience" class="btn btn-outline--primary">Откуда столько?</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</section>