<header class="top-nav">
    <div class="wrap">
        {% if isHomepage %}
        <span class="logo">
            <img src="/styles/images/logo.svg" alt="kooksa.codes - logo">
        </span>
        {% else %}
        <a href="/{{ page.lang }}/" class="logo">
            <img src="/styles/images/logo.svg" alt="kooksa.codes - logo">
        </a>
        {% endif %}
        <nav>
            <ul class="top-menu" data-el="nav">

                {% for item in navigation[page.lang] %}
                <li class="top-menu__item">
                    <a class="top-menu__link" href="{% if not isHomepage %}{{ item.url | replace("#projects", "projects") }} {% else %} {{item.url}} {% endif %}">{{ item.text }}</a>
                </li>
                {% endfor %}

                <li class="top-menu__item lang-switcher">
                    <span class="lang-switcher__item is-active" lang="{{ page.lang }}">{{ page.lang }}</span>
                    <span>&nbsp;/&nbsp;</span>
                    {% for link in page.url | locale_links %}
                    <a class="lang-switcher__item" href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">{{ link.lang }}</a>
                    {% endfor %}
                </li>
            </ul>
            <button class="btn-menu-m" data-btn="open-menu">
                <span class="btn-menu-box">
                    <span class="btn-menu-inner"></span>
                </span>
            </button>
        </nav>
    </div>
</header>